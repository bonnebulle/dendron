{ 
    "editor.lineHeight": 28,
    "terminal.integrated.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,\"Helvetica Neue\",Arial,\"Noto Sans\",sans-serif,\"Apple Color Emoji\",\"Segoe UI Emoji\",\"Segoe UI Symbol\",\"Noto Color Emoji\"",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorWidth": 5,
    // https://jonathanmh.com/keep-soft-line-wrap-column-width-visual-studio-code-markdown/
    "editor.rulers": [85],
    "editor.wordWrap": "wordWrapColumn",
    "editor.insertSpaces": false,
    "vsicons.presets.angular": true,
    "editor.codeLensFontSize": 13,
    "scm.inputFontSize": 12,
    "editor.suggestFontSize": 17,
    "editor.suggestLineHeight": 20,
    "markdown.preview.fontSize": 15,
    "editor.inlineHints.fontSize": 16,
    "editor.parameterHints.enabled": false,
    "editor.fastScrollSensitivity": 84,
    "editor.hover.delay": 999,
    "editor.hover.sticky": false,
    "editor.fontSize": 17,
    "editor.wordWrapColumn": 74,
    "editor.quickSuggestionsDelay": 8000,
    "[markdown]": {
        "editor.hover.delay": 3,
        "editor.wordWrap": "wordWrapColumn",
        "editor.quickSuggestions": true,
    },
    "[CSS]": {
        "editor.quickSuggestions": false,
        "editor.hover.delay": 99900,
    },
    "cSpell.maxNumberOfProblems": 10,
    "breadcrumbs.symbolSortOrder": "type"
}